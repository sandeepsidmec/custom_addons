<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!---Student Form-->
    <record id="view_student_form" model="ir.ui.view">
        <field name="name">student</field>
        <field name="model">college.student</field>
        <field name="arch" type="xml">
            <form string="student">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="age"/>
                            <field name="dob"/>
                        </group>
                        <group>
                            <field name="gender"/>
                            <field name="Address"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    <!--Student Form-->
    <record id="view_student_list" model="ir.ui.view">
        <field name="name">student</field>
        <field name="model">college.student</field>
        <field name="arch" type="xml">
            <list string="student">
                <field name="name"/>
                <field name="age"/>
                <field name="dob"/>
                <field name="gender"/>
            </list>
        </field>
    </record>
    <!---Action_Menu-->
    <record id="action_college_student" model="ir.actions.act_window">
        <field name="name">student</field>
        <field name="res_model">college.student</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_student_list"/>
    </record>

</odoo>