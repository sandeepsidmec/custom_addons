<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!---Student Form-->
    <record id="view_student_form" model="ir.ui.view">
        <field name="name">student</field>
        <field name="model">college.student</field>
        <field name="arch" type="xml">
            <form string="student">
                <sheet>
                    <group>
                        <group>
                            <field name="student_id"/>
                            <field name="email"/>
                            <field name="age"/>
                            <field name="dob"/>
                            <field name="is_student_new"/>
                            <field name="allotment_date" invisible="is_student_new == False"/>
                            <field name="joining_date" invisible="is_student_new == False"/>
                        </group>
                        <group>
                            <field name="mobile"/>
                            <field name="gender"/>
                            <field name="address"/>
                            <field name="student_names" widget="many2many_tags"/>
                            <field name="teacher_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="order lines">
                            <field name="student_lines">
                                <list editable="bottom">
                                    <field name="book_id"/>
                                    <field name="qty"/>
                                    <field name="unit_price"/>
                                    <field name="sub_total"/>
                                </list>
                                <form>
                                    <field name="book_id"/>
                                    <field name="qty"/>
                                    <field name="unit_price"/>
                                    <field name="sub_total"/>
                                </form>
                            </field>
                        </page>
                        <page string="Optional Products">
                            <field name="student_options">
                                <list editable="bottom">
                                    <field name="book_id"/>
                                    <field name="qty"/>
                                    <field name="unit_price"/>
                                    <field name="sub_total"/>
                                </list>
                                <form>
                                    <field name="book_id"/>
                                    <field name="qty"/>
                                    <field name="unit_price"/>
                                    <field name="sub_total"/>
                                </form>
                            </field>
                        </page>
                        <page string="other information">
                            <group>
                                <field name="user_id"/>
                                <field name="company_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    <!--Student Form-->
    <record id="view_student_list" model="ir.ui.view">
        <field name="name">student</field>
        <field name="model">college.student</field>
        <field name="arch" type="xml">
            <list string="student">
                <field name="student_id"/>
                <field name="age"/>
                <field name="dob"/>
                <field name="gender"/>
                <field name="teacher_id"/>
            </list>
        </field>
    </record>

    <!---Action_Menu-->
    <record id="action_college_student" model="ir.actions.act_window">
        <field name="name">student</field>
        <field name="res_model">college.student</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_student_list"/>
    </record>

</odoo>