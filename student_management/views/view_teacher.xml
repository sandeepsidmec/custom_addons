<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!---Student Form-->
    <record id="view_teacher_form" model="ir.ui.view">
        <field name="name">teacher</field>
        <field name="model">college.teacher</field>
        <field name="arch" type="xml">
            <form string="teacher">
                <group>
                    <group>
                    <field name="name"/>
                    <field name="age"/>
                    <field name="experience"/>
                    <field name="gender"/>
                    </group>
                    <group>
                    <field name="Address"/>
                    <field name="subject"/>
                    <field name="teacher_email"/>
                    </group>
                </group>
            </form>
        </field>
    </record>
    <!--Student list-->
    <record id="view_teacher_list" model="ir.ui.view">
        <field name="name">teacher</field>
        <field name="model">college.teacher</field>
        <field name="arch" type="xml">
            <list string="teacher">
                <field name="name"/>
                <field name="age"/>
                <field name="experience"/>
                <field name="gender"/>
                <field name="subject"/>
            </list>
        </field>
    </record>
    <!---Action_Menu-->
    <record id="action_college_teacher" model="ir.actions.act_window">
        <field name="name">teacher</field>
        <field name="res_model">college.teacher</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_teacher_list"/>
    </record>

</odoo>