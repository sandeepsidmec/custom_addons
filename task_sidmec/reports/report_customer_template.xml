<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_customer_report_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="customer">
                <t t-call="web.basic_layout">
                    <div class="page" style="">
                        <img t-if="customer.image_1920"
                             t-att-src="image_data_uri(customer.image_1920)"
                             style="max-height: 70px;" alt="Logo"/> <br/>
                        <span t-field="customer.customer_id"/> <br/>
                        <span t-field="customer.customer_id.age"/> <br/>
                        <span t-field="customer.customer_id.email"/><br/>
<!--                        <span t-field="patient..experience"/><br/>-->
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
